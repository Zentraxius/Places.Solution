@using Places.Models;

<h1>Places list</h1>
@if (Model.Count == 0)
{
  <p>There are no destinations on this list.</p>
}
<ul></ul>
@foreach (Place place in Model)
{
  <li><a href="/places/@place.Id">@place.City</a></li>
}
</ul>

<a href="/places/new">Add a new place.</a>

<form action="/places/delete" method="post">
  <button type="submit" name="button">Clear All Places</button>
</form>